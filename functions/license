function license() {

  local year=$(date +"%Y")
  local file=$(pwd)/LICENSE
  local line="$(git config --get user.fullname)"

  vared -p "name : " line
  (sed "s,\$year,$year," | sed "s,\$name,$line,") < ~/.config/license > $file
  echo "Wrote $file:"
  printf "\n\033[90m%s\033[0m\n\n" "$(pr -o 2 -t $file)"
}
