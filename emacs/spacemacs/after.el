(defun open-scratch (file)
 "Open emacs dots"
 (find-file-at-point (expand-file-name (concat dotfiles-spacemacs-scratches-dir file))))

(global-set-key (kbd "A-C-M-S-d")
                (lambda ()
                  (interactive)
                  (open-scratch "scratch.el")))

(open-scratch "scratch.el")
